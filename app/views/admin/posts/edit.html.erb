<div class="section">
<% form_for resource, :url => admin_post_path(resource) do |f| %>
	<p>
		<%= f.label :title, 'title' %>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :body, 'body' %>
		<%= f.text_area :body %>
	</p>
	<%= render :partial => 'shared/publish_control', :locals => {:f => f} %>
	<p>
		<%= f.submit 'Save' %>
	</p>
<% end %>
</div>